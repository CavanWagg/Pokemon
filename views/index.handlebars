<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each pokemon}}
    {{#unless this.captured}}
      {{> }}
    {{/unless}}
  {{/each}}
</ul>

<h2>Pokemon that are captured!</h2>

<ul>
  {{#each pokemon}}
    {{#if this.captured}}
      {{> }}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Pokemon</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="captured">Captured?</label><br>
    <input type="radio" name="captured" value="1" checked> Caught!<br>
    <input type="radio" name="captured" value="0"> Wild!
  </div>

  <button type="submit">Add Cat</button>
</form>
